<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_border_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="12dp" />
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
        </shape>
    </item>

    <!-- Border and background layer -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background -->
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#DADADA" /> <!-- Light gray border -->
        </shape>
    </item>
</layer-list>