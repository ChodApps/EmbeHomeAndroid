<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected (focused) state -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- White background -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#CCCACA" /> <!-- Blue border when focused -->
        </shape>
    </item>

    <!-- Default state (unfocused) -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- White background -->
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#BCBCBC" /> <!-- Light gray border when unfocused -->
        </shape>
    </item>
</selector>