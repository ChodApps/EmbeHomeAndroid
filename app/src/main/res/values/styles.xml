<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="background">@drawable/main_bg</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="fontFamily">@font/nunito_sans</item>
    </style>

    <style name="Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="H5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/H5</item>
    </style>

    <style name="Heading" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/heading_sub_16sp</item>
        <item name="android:textColor">#f7b253</item>
        <item name="android:padding">@dimen/padding_small_5dp</item>
    </style>

    <style name="Switch" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/Body1</item>
    </style>

    <style name="SubHeading" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">#2f2f2f</item>
        <item name="android:background">@drawable/rounded_2</item>
        <item name="android:textSize">@dimen/Body1</item>
    </style>

    <style name="Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/heading_para_12sp</item>
    </style>

    <style name="link" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/heading_para_12sp</item>
        <item name="android:textColor">@color/link</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/space_med_16dp</item>
    </style>

    <style name="MainLink" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/Body2</item>
        <item name="android:textColor">@color/link</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/space_med_16dp</item>
    </style>

    <style name="RuleMainLink" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/Body2</item>
        <item name="android:textColor">@color/link</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/Body1</item>
    </style>
    
    <style name="textField" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/heading_sub_18sp</item>
        <item name="fontFamily">@font/nunito_sans</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ListItemName" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/Body2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_med_8dp</item>
        <item name="android:maxLength">15</item>
    </style>

    <style name="ItemSelect" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/heading_sub_16sp</item>
        <item name="android:padding">@dimen/space_med_16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="WeekDays" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/heading_sub_18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Instructions" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:gravity">center</item>
    </style>


    <style name="TTEditText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:maxLines">1</item>
    </style>
    <!-- res/values/styles.xml -->
    <style name="RoundedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="TTEditTextBox" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/heading_sub_18sp</item>
        <item name="fontFamily">@font/nunito_sans</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
